<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ankit626.dataapp.MainActivity">

    <TextView
        android:id="@+id/nametext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="25sp"
        android:layout_marginLeft="20dp"/>
    <EditText
        android:id="@+id/nameedit"
        android:hint="Enter Your Name"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:layout_below="@+id/nametext"/>
    <TextView
        android:layout_below="@+id/nameedit"
        android:id="@+id/regtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reg no"
        android:textSize="25sp"
        android:layout_marginLeft="20dp"/>
    <EditText
        android:id="@+id/regedit"
        android:hint="Enter Your Registration No"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:layout_below="@+id/regtext"/>
    <TextView
        android:layout_below="@+id/regedit"
        android:id="@+id/phonetext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone no"
        android:textSize="25sp"
        android:layout_marginLeft="20dp"/>
    <EditText
        android:id="@+id/phoneedit"
        android:hint="Enter Your Phone number"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:layout_below="@+id/phonetext"/>
    <Button
        android:layout_marginLeft="90dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/phoneedit"
        android:text="Send Data"
        android:id="@+id/senddata"
        android:layout_width="150dp"
        android:layout_height="40dp" />
    <Button
        android:layout_marginLeft="90dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/senddata"
        android:text="Receive Data"
        android:id="@+id/recdata"
        android:layout_width="150dp"
        android:layout_height="40dp" />

    <TextView
        android:id="@+id/display"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="70sp" />

</RelativeLayout>
